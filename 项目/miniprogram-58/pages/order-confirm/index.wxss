.address-card {
  width: 95%;
  margin: 10rpx auto;
  margin-top: 10rpx;
}
.bigbox{
  margin: 0rpx 0rpx 24rpx;
}
.address-card .top-line {
  width: 100%;
  height: 6rpx;
  background-color: #fff;
  background-image: url(https://cdn-we-retail.ym.tencent.com/miniapp/order/stripe.png);
  background-repeat: repeat-x;
  display: block;
}
.top-line{
  margin-top: 10rpx;
}
.icon{
  width: 40rpx;
  height: 40rpx;
}
.add-address{
  display: flex;
  margin-left: 20rpx;
  align-items: center;
  height: 125rpx;
}
.address-head{
  display: flex;
}

.good-icon{
  width: 45rpx;
  height: 45rpx;
  margin-left: 5rpx;
}
.good{
  width: 94%;
  margin: 0 auto;
}
.shopperInfo{
  display: flex;
}
.good-image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}
.goodsInfo{
  display: flex;
  margin-top: 25rpx;
}
.good-name{
  margin-top: rpx;
  width: 350rpx;
  height: 80rpx;
  -webkit-line-clamp: 3;
  text-overflow: ellipsis;
  word-wrap: break-word;
}
.price{
  font-weight: 550;
  width: 150rpx;
  text-align: end;
  margin-left: 20rpx;
}
.good-price{
  font-size: small;
  color: #bfbfbf;
  width: 150rpx;
  text-align: end;
  margin-left: 374rpx;
}
.right{
  margin-left: 20rpx;
}
.first{
  font-size: small;
  color: gray;
  width: 120rpx;
}
.second{
  font-size: small;
  width: 360rpx;
  text-align: end;
  margin-left: 200rpx;
}
.first,.second{
  margin-top: 35rpx;
}
.count-jian{
  color: gray;
  font-size: 28rpx;
  width: 140rpx;
  display: flex;
  justify-content: flex-end;
}
.count-text{
  color: gray;
  font-size: 29rpx;
  width: 100rpx;
  display: flex;
  justify-content: flex-end;
}
.count-price{
  color: #fa4126;
  font-weight: 550;
}
.pay-box{
  background-color: white;
  border: 1px solid gold;
  width: 100%;
  border-top-left-radius: 10rpx;
  border-top-left-radius: 10rpx;
  height: 720rpx;
  border-top:0.5rpx solid gainsboro;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  position: fixed;
  bottom: 0;
  animation: maskshow .1s linear;
}
@keyframes maskshow{
  0%{
    height: 0rpx;
  }
  75%{
    height: 500rpx;
  }
  100%{
    height: 720rpx;
  }
}
.pay-head{
  height: 30%;
}
.pay-middle{
  height: 25%;
  margin-top: 15rpx;
  border-top: 0.5rpx solid gainsboro;
}
.pay-end{
  height: 45%;
  background-color: white;
}
.pay-head-second{
  display: flex;
}
.pay-head-third{
  display: flex;
  justify-content: center;
  font-size: x-large;
  font-weight: 540;
}
.pay-head-first{
  display: flex;
  align-items: center;
  margin-top: 25rpx;
}
.pay-middle-first{
  display: flex;
  font-size: small;
}
.pay-middle-second{
  display: flex;
  justify-content: center;


}
.icon-01{
  width: 60rpx;
  justify-content: center;
  line-height: 60rpx;
  height: 60rpx;
}
.grid{
  margin-left: 25rpx;
  border: 1px silver solid;
  margin-top: 25rpx;
  width: 60rpx;
  height: 60rpx;
  background-color: gainsboro;
  border-radius: 10rpx;
}
.pay-end-first{
  display: flex;
}
.pay-way{
  margin-left: 40rpx;
}
.way{
  display: flex;
  align-items: center;
  margin-left: 425rpx;
}
.pay-end-first view{
  display: flex;
  width: 33%;
  height: 72rpx;
  border-top: 0.5rpx solid gainsboro;
  border-right: 0.5rpx solid gainsboro;
  justify-content: center;
  align-items: center;
  font-size: 20px;
}
.icon{
  width: 45rpx;
  height: 45rpx;
}
.tab{
  background-color: gainsboro;
}
.pay-end-first view:active{
  display: flex;
  width: 33%;
  height: 72rpx;
  background-color: whitesmoke;
  border-top: 0.5rpx solid gainsboro;
  border-right: 0.5rpx solid gainsboro;
  justify-content: center;
  align-items: center;
  font-size: 20px;
}